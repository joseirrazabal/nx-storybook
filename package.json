		"eslint-plugin-react-with-styles": "^2.2.0",
		"eslint-plugin-standard": "^4.0.1",
		"extract-text-webpack-plugin": "^3.0.2",
		"file-loader": "^5.0.2",
		"git-directory-deploy": "^1.5.1",
		"husky": "^3.1.0",
